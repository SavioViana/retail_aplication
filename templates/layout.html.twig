{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="{{ path('home') }}">LOGO</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {{ app.request.get('_route') == 'home' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item  {{ app.request.get('_route') == 'car_index' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('car_index') }}">Carros</a>
                </li>
                <li class="nav-item  {{ app.request.get('_route') == 'client_index' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('client_index') }}">Clientes</a>
                </li>
                <li class="nav-item  {{ app.request.get('_route') == 'retail_index' ? 'active' : '' }}">
                    <a class="nav-link" href="{{path('rentail_index')}}">Locações</a>
                </li>
                
                <li class="nav-item dropdown  {{ app.request.get('_route') == 'car_index' ? 'active' : '' }}">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Carros
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('car_index') }}">Todos os Carros</a>
                    <a class="dropdown-item" href="{{ path('brand_index') }}">Marcas</a>
                  
                </li>
            </ul>
        </div>
        <a class="btn btn-danger" href="{{ path('app_logout') }}">Sair</a>
    </nav>
    <div class="container" style="margin-top:80px;">
        
           {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            
         {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
