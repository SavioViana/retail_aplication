{% extends 'layout.html.twig' %}

{% block title %}Brand{% endblock %}

{% block content %}
    <h1>Marca</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ brand.label }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('brand_index') }}">Voltar para listagem</a>

    <a class="btn btn-primary" href="{{ path('brand_edit', {'id': brand.id}) }}">Editar</a>

    {{ include('brand/_delete_form.html.twig') }}
{% endblock %}
