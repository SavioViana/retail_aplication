{% extends 'layout.html.twig' %}

{% block title %}Car{% endblock %}

{% block content %}
    <h1 class="text-uppercase">Carro</h1>

<div class="card">
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                <tr>
                    <th>Marca</th>
                    <td>{{ car.brand.name }}</td>
                </tr>
                <tr>
                    <th>Modelo</th>
                    <td>{{ car.model }}</td>
                </tr>
                <tr>
                    <th>Ano</th>
                    <td>{{ car.year }}</td>
                </tr>
                <tr>
                    <th>status</th>
                    <td>  <span class="badge badge-{{ (car.status) ? 'warning' : 'success' }}"> {{ (car.status) ? 'Locado' : 'Disponivel' }}</span></td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('car_index') }}">Voltar para listagem</a>

        <a  class="btn btn-primary float-right ml-3"  href="{{ path('car_edit', {'id': car.id}) }}">Editar</a>

        {{ include('car/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
