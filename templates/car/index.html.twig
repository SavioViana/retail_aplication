{% extends 'layout.html.twig' %}

{% block title %}Lista de Carros{% endblock %}

{% block content %}
    <h1>Lista de Carros</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Ano</th>
                <th>Status</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.brand.name }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.year }}</td>
                <td>
                   {{ car.status_car }}
                </td>
                <td>
                    <a class="btn btn-success "  href="{{ path('car_show', {'id': car.id}) }}">mostrar</a>
                    <a class="btn btn-primary "  href="{{ path('car_edit', {'id': car.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('car_new') }}" class="btn btn-primary float-right" >Novo</a>
{% endblock %}
